generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id_user     Int      @id @unique(map: "id_user_UNIQUE") @default(autoincrement())
  first_name  String   @db.VarChar(100)
  last_name   String   @db.VarChar(100)
  birthdate   DateTime @db.Date
  nickname    String?  @unique(map: "nickname_UNIQUE") @db.VarChar(100)
  description String?  @db.VarChar(250)
  email       String   @unique(map: "email_UNIQUE") @db.VarChar(50)
  address     String?  @db.VarChar(50)
  phonenumber String?  @unique(map: "phonenumber_UNIQUE") @db.VarChar(10)
  password    String   @db.VarChar(100)
  type_user   String   @db.VarChar(20)
}
